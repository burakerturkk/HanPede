@model HanPerde.Models.CategoryCurtain
@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>
<br />
@using (Html.BeginForm("CategoryUpdate", "CurtainCategory", FormMethod.Post))
{
    @Html.Label("Id")
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-primary">Güncelle</button>

}

